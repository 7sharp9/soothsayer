    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "isWatching": true,
    "tasks": [
        {
            "taskName": "watch",
            "args": ["run", "watch"]
        },
        {
            "taskName": "build",
            "args": ["run", "build"]
        }
    ]
}